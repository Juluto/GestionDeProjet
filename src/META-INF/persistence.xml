<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="CONCEPTIONCONSTRUCTION" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>modele.Acteur</class>
        <class>modele.Adresse</class>
        <class>modele.Appartement</class>
        <class>modele.BatimentPublic</class>
        <class>modele.Charpente</class>
        <class>modele.Dallage</class>
        <class>modele.Electricite</class>
        <class>modele.Entreprise</class>
        <class>modele.EtablissementScolaire</class>
        <class>modele.Fondation</class>
        <class>modele.Hopital</class>
        <class>modele.Immeuble</class>
        <class>modele.Lot</class>
        <class>modele.Lotissement</class>
        <class>modele.Maconnerie</class>
        <class>modele.Maison</class>
        <class>modele.Menuiseries</class>
        <class>modele.Musee</class>
        <class>modele.Peinture</class>
        <class>modele.Platerie</class>
        <class>modele.Projet</class>
        <class>modele.Reseaux</class>
        <class>modele.Terrassement</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/conceptionconstruction"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="javax.persistence.schema-generation.database.action"
                  value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
